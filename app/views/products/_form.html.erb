
<%= simple_form_for(@product, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>
 
 
    <%= f.input :title, required: true, label: false, placeholder: "Title", input_html: {class: "form-control"} %>
    
    <%= f.input :decription, required: true, label: false, placeholder: "Description", input_html: {class: "form-control", rows: 5} %>
    <br>
    <%= f.input :price, required: true, label: false, placeholder: "Price", input_html: {class: "form-control"} %>
    
    <%= f.input :image %>
        
    <div class="checkbox text-center">
    <p>Availability</p>
   
    <%= f.button :submit, class: "btn btn-primary btn-block" %>
<% end %>
